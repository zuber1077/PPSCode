<div class="py-4">
    <div class="row justify-content-md-center px-4">
        <form method="POST" class="contact-form col-sm-12 col-md-10 col-lg-7 p-4 mb-4">
            {{#each errorMessages }}
                <div class="alert alert-danger alert alert-warning alert-dismissible fade show" role="alert" data-dismiss="alert" aria-label="Close">
                    {{!-- <i class="fa fa-warning"></i> --}}
                    <strong>Oops!</strong>
                    {{this.msg}}
                    <span aria-hidden="true">Ã—</span>
                </div>
            {{/each}}
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="contactFormFullName">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter your name" value={{name}}>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="contactFormEmail">Email address</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter your email address" value={{email}}>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="exampleInputMessage1">Message</label>
                        <textarea class="form-control mb-4" rows="10" placeholder="Enter your message..."
                            name="message">{{message}}</textarea>
                    </div>
                </div>
            </div>
            <input class="btn btn-primary btn-pill d-flex ml-auto mr-auto" type="submit" value="Send Your Message">
        </form>
    </div>
</div>